<p id="notice" style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table>
	<thead>
		<tr>
			<th>First name</th>
			<th>Last name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Twitter</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
	 <div id="friends">
  		<% @friends.each do |friend| %>
    	<%= render friend %>
    	<p>
      	<%= link_to "Show this friend", friend %>
    	</p>
  		<% end %>
	 </div>
	</tbody>


</table>

<%= link_to "New friend", new_friend_path %>
